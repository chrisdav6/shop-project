<%- include('../partials/header') %>
<div class="container">
  <main>
    <h1>Edit Product</h1>
    <hr>
    <form class="mt-5 editProductForm" action="/admin/edit-product" method="POST">
      <input type="hidden" name="productId" value="<%= product.id %>">
      <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control form-control-lg" type="text" name="title" id="title" value="<%= product.title %>">
      </div>
      <div class="form-group">
        <label for="imageUrl">Image</label>
        <input class="form-control form-control-lg" type="text" name="imageUrl" id="imageUrl"
          value="<%= product.imageUrl %>">
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        <input class="form-control form-control-lg" type="number" name="price" id="price" min="0.0" step="0.25"
          value="<%= product.price %>">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control form-control-lg" name="description" id="description"
          rows="5"><%= product.description %></textarea>
      </div>
      <button class="btn btn-info btn-lg btn-block mt-5">Update Product</button>
    </form>
  </main>
</div>
<%- include('../partials/footer') %>